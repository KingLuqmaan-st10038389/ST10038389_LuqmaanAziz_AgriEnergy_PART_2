@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>

@if (TempData["LoginSuccess"] != null)
{
    <div class="alert alert-success">@TempData["LoginSuccess"]</div>
}
else if (TempData["LoginError"] != null)
{
    <div class="alert alert-danger">@TempData["LoginError"]</div>
}
<!--LOGIN FORM FOR THE USER TO FILL OUT.-->
<form asp-action="Login" method="post">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="FullName" placeholder="Enter your full name" required />
        <!--User fills in their FullName-->
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="Email" placeholder="Enter your email" required />
        <!--User fills in their Email Address-->
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="Password" placeholder="Enter your password" required />
        <!--User fills in a unique password if the password fails shows a message incorrect password inserted or you missing something.-->
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Login</button>
    <!--LOGIN BUTTON/LOGGED INTO YOUR ACCOUNT NOW -->

    
</form>
<!--END OF FILE-->