@model ST10038389_PROG7311___POE_PART_2.Models.Farmer

@{
    ViewData["Title"] = "Farmers";
}

<h2>Farmers</h2>
<!--FARMERS FORM PAGE:-->
<!--List of Farmers: -->
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Contact Info</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <!--IF ELSE STATEMENT FUNCTIONS TO OPERATE WITH FARMERS CORRESPONDS:-->
        @foreach (var farmer in ViewBag.Farmers as List<ST10038389_PROG7311___POE_PART_2.Models.Farmer>)
        {
            <tr>
                <td>@farmer.Name</td>
                <td>@farmer.Location</td>
                <td>@farmer.ContactInfo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@farmer.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@farmer.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<!-- Form to Add New Farmer -->
<h4>Add New Farmer</h4>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactInfo"></label>
        <input asp-for="ContactInfo" class="form-control" />
        <span asp-validation-for="ContactInfo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Farmer</button>
</form>
<!--END OF FILE-->